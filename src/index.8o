#include "macros.8o"

: main
  hires

: main-redraw
  v0 := 1
  delay := v0
  loop
    v0 := delay
  if v0 != 0 then again
  render-scene
  mark-screen-clean
: main-loop
  #clock-tick
  check-keys
  i := long dirty    # Is the screen dirty?
  load v0
  if v0 == 1 then jump main-redraw
  jump main-loop

#include "renderer1.8o"
#include "game-state.8o"
#include "key-input.8o"
